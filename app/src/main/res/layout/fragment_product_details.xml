<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fpd_scrollview"
    android:background="@color/purplishLight"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main_Gl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="4"
        android:clickable="true"
        tools:context=".ProductDetailsFragment">

        <!--TextView
            android:id="@+id/product_cat_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="10sp"
            android:layout_columnSpan="4"/-->

        <TextView
            android:id="@+id/product_name_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="10sp"
            android:layout_columnSpan="4"/>

        <ViewFlipper
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoStart="true"
            android:flipInterval="8000"
            android:layout_columnSpan="4"
            android:layout_margin="6sp">
            <com.adishwarestore.storesalesassistant.UrlImageView
                android:id="@+id/prodImg1_Uiv"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@color/purplishLight"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:scaleType="fitXY" />
            <com.adishwarestore.storesalesassistant.UrlImageView
                android:id="@+id/prodImg2_Uiv"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@color/purplishLight"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:scaleType="fitXY" />
        </ViewFlipper>

        <TextView
            android:id="@+id/product_desc_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:padding="8sp"
            android:layout_columnSpan="4"/>
        <TextView
            android:id="@+id/price_mrp_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:layout_columnSpan="2"/>
        <TextView
            android:id="@+id/price_fp_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:layout_columnSpan="2"/>
        <TextView
            android:id="@+id/price_disc_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:paddingLeft="8sp"
            android:paddingBottom="8sp"
            android:layout_columnSpan="4"/>
        <TextView
            android:id="@+id/product_off_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:paddingBottom="3sp"
            android:text="Offers:"
            android:textStyle="bold"
            android:layout_columnSpan="4"/>
        <TextView
            android:id="@+id/product_off_CD_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:paddingLeft="8sp"
            android:layout_columnSpan="4"/>
        <TextView
            android:id="@+id/product_off_OTH_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:paddingLeft="8sp"
            android:layout_columnSpan="4"/>
    </GridLayout>
</ScrollView>