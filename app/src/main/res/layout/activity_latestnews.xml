<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/aln_scrollview"
    android:background="@color/purplishLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/aln_rellyt1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10sp">
            <ImageView
                android:id="@+id/aln_newsheadlines_Iv"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/adishwar_newstore_hyd"/>
            <TextView
                android:id="@+id/aln_newsheadlines_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10sp"
                android:textAlignment="viewStart"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/purplishDark"
                android:textSize="14sp"
                android:padding="2sp"
                android:layout_below="@id/aln_newsheadlines_Iv"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/aln_rellyt2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/newslist_Lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    </LinearLayout>